<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF1F1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"/>

    <RelativeLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#f03">


        </View>


    </RelativeLayout>



    <android.support.v7.widget.CardView
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:cardCornerRadius="80dp"
        app:cardElevation="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="#c0c0c0"
        >

        <ImageView
            android:id="@+id/profilPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progresBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="120dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginTop="70dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="10dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:text="Name"
                        android:textSize="19sp"
                        android:layout_marginBottom="29dp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:text="Email"
                        android:textSize="19sp"
                        android:layout_marginBottom="20dp"/>
               </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:text=""
                        android:textSize="19sp"
                        android:id="@+id/baca_nama"
                        android:layout_marginBottom="10dp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:text=""
                        android:textSize="19sp"
                        android:id="@+id/baca_email"/>
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">


                <Button

                    android:id="@+id/Edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:background="#4AB408"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_margin="20dp"
                    />

                <Button

                    android:id="@+id/Delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hapus"
                    android:background="#d03"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_margin="20dp"
                    />

                <Button

                    android:id="@+id/logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:background="#203050"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_margin="20dp"
                    />

<!--                <Button-->

<!--                    android:id="@+id/baca"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="baca"-->
<!--                    android:background="#72e3"-->
<!--                    android:textColor="#fff"-->
<!--                    android:textStyle="bold"-->
<!--                    android:layout_weight="1"-->
<!--                    android:layout_margin="20dp"-->
<!--                    />-->

            </LinearLayout>







        </LinearLayout>




    </android.support.v7.widget.CardView>


</RelativeLayout>